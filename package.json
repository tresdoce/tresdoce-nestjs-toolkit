{
  "name": "@tresdoce-nestjs-toolkit/root",
  "description": "Tresdoce NestJs Toolkit",
  "author": {
    "name": "Maximiliano \"Mex\" Delgado",
    "email": "mdelgado@tresdoce.com.ar",
    "url": "https://rudemex.github.io/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tresdoce/tresdoce-nestjs-toolkit.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tresdoce/tresdoce-nestjs-toolkit/issues"
  },
  "homepage": "https://github.com/tresdoce/tresdoce-nestjs-toolkit#readme",
  "private": true,
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "turbo run build --concurrency=1",
    "test": "turbo run test --concurrency=1",
    "clean": "turbo run clean",
    "postclean": "rimraf ./dist ./node_modules ./yarn.lock ./package-lock.json",
    "lint": "lint-staged",
    "prepublishOnly": "yarn build",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,md,json}\"",
    "version-packages": "lerna version --conventional-commits --force-git-tag --create-release github --yes",
    "publish:pkgs": "lerna publish from-git --no-verify-access --yes",
    "postinstall": "husky install && lerna bootstrap",
    "bs": "lerna bootstrap",
    "hoist-deps": "lerna clean -y && lerna bootstrap",
    "plop": "plop"
  },
  "workspaces": [
    "packages/*"
  ],
  "commitlint": {
    "extends": "@commitlint/config-conventional"
  },
  "prettier": {
    "semi": true,
    "tabWidth": 2,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "all"
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx,js,jsx,md,json}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@nestjs/axios": "^2.0.0",
    "@nestjs/class-validator": "^0.13.3",
    "@nestjs/common": "^9.4.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.4.0",
    "@nestjs/microservices": "^9.4.0",
    "@nestjs/platform-express": "^9.4.0",
    "@nestjs/swagger": "^6.3.0",
    "@nestjs/terminus": "^9.2.2",
    "@nestjs/typeorm": "^9.0.1",
    "axios": "^1.3.5",
    "axios-retry": "^3.4.0",
    "camunda-external-task-client-js": "^2.2.0",
    "lodash": "^4.17.21",
    "mongodb": "^4.13.0",
    "mysql": "^2.18.1",
    "mysql2": "^3.0.1",
    "pg": "^8.5.1",
    "redis": "^4.1.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.5",
    "shx": "^0.3.4",
    "testcontainers": "^9.5.0",
    "typeorm": "^0.3.15",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-decorators": "^7.20.13",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/plugin-proposal-optional-chaining": "^7.20.7",
    "@babel/preset-typescript": "^7.21.4",
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.2",
    "@elastic/elasticsearch-mock": "^2.0.0",
    "@nestjs/cli": "^9.3.0",
    "@nestjs/schematics": "^9.1.0",
    "@nestjs/testing": "^9.4.0",
    "@pika/cli": "^0.2.0",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-types": "^0.9.2",
    "@pika/plugin-standard-pkg": "^0.9.2",
    "@pika/plugin-ts-standard-pkg": "^0.9.2",
    "@types/camunda-external-task-client-js": "^1.3.3",
    "@types/ejs": "^3.1.1",
    "@types/elasticsearch": "^5.0.40",
    "@types/express": "^4.17.17",
    "@types/glob": "^8.0.1",
    "@types/inline-css": "^3.0.1",
    "@types/jest": "^29.5.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.11",
    "@types/nodemailer": "^6.4.4",
    "@types/pug": "^2.0.6",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-extended": "^3.2.4",
    "jest-mock-extended": "^3.0.1",
    "jest-sonar-reporter": "^2.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^13.2.1",
    "mocha": "^10.2.0",
    "nodemailer-mock": "^2.0.1",
    "plop": "^3.0.5",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "supertest": "^6.2.2",
    "testcontainers": "^9.5.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.0",
    "tsconfig-paths": "^4.2.0",
    "turbo": "^1.9.3",
    "typescript": "^4.9.5"
  }
}
