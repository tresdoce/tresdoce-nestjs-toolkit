  "name": "@tresdoce-nestjs-toolkit/root",
  "description": "Tresdoce NestJS Toolkit",
  "author": {
    "name": "Maximiliano \"Mex\" Delgado",
    "email": "mdelgado@tresdoce.com.ar",
    "url": "https://rudemex.github.io/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tresdoce/tresdoce-nestjs-toolkit.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tresdoce/tresdoce-nestjs-toolkit/issues"
  },
  "homepage": "https://github.com/tresdoce/tresdoce-nestjs-toolkit#readme",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "turbo run build --concurrency=1",
    "test": "turbo run test --concurrency=1",
    "clean": "turbo run clean",
    "preclean": "lerna clean -y",
    "postclean": "rimraf ./yarn.lock ./package-lock.json ./dist ./.turbo ./mochawesome-report ./mochawesome.json ./node_modules",
    "lint": "lint-staged",
    "prepublishOnly": "yarn build",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,md,json}\"",
    "version:prerelease": "lerna version --conventional-commits --no-changelog --conventional-prerelease --no-git-tag-version --preid=beta --yes",
    "version:release": "lerna version --conventional-commits --force-git-tag --create-release github --conventional-graduate --yes",
    "publish:pkgs": "lerna publish from-package --no-verify-access --yes",
    "plop": "plop",
    "clean-reports:pretest": "rimraf ./packages/*/test-results",
    "prereport": "rimraf ./mochawesome-report ./mochawesome.json",
    "report": "yarn mochawesome:merge",
    "postreport": "yarn mochawesome:report-generator",
    "mochawesome:merge": "npx mochawesome-merge -f ./packages/*/test-results/*.json > mochawesome.json",
    "mochawesome:report-generator": "npx marge -f index -t \"Tresdoce NestJS Toolkit\" -p \"Tresdoce NestJS Toolkit - Test Reports\" --saveJson --overwrite --charts --assetsDir ./mochawesome-report/assets mochawesome.json",
    "prepare": "husky"
  },
  "commitlint": {
    "extends": "@commitlint/config-conventional"
  },
  "prettier": {
    "semi": true,
    "tabWidth": 2,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "all"
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx,js,jsx,md,json}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
