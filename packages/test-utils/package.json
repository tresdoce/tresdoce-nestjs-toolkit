{
  "name": "@tresdoce-nestjs-toolkit/test-utils",
  "version": "0.3.1",
  "description": "Tresdoce NestJS Toolkit - Utilities para testing",
  "author": {
    "name": "Maximiliano \"Mex\" Delgado",
    "email": "mdelgado@tresdoce.com.ar",
    "url": "https://rudemex.github.io/"
  },
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "keywords": [
    "nestjs",
    "test-utils"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tresdoce/tresdoce-nestjs-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/tresdoce/tresdoce-nestjs-toolkit/issues"
  },
  "homepage": "https://github.com/tresdoce/tresdoce-nestjs-toolkit#readme",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf ../../dist/test-utils",
    "build": "pika build --out ../../dist/test-utils",
    "test": "jest --runInBand --coverage --forceExit",
    "clean": "rimraf .turbo coverage node_modules test-report.xml"
  },
  "publishConfig": {
    "access": "public",
    "directory": "../../dist/test-utils"
  },
  "peerDependencies": {
    "@nestjs/common": "^9.4.0",
    "@nestjs/core": "^9.4.0",
    "@nestjs/platform-express": "^9.4.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.5",
    "testcontainers": "^9.5.0"
  },
  "dependencies": {
    "testcontainers": "^9.5.0"
  },
  "devDependencies": {
    "@tresdoce-nestjs-toolkit/config": "^0.2.4",
    "@types/tresdoce-nestjs-toolkit": "^0.1.3"
  },
  "prettier": {
    "semi": true,
    "tabWidth": 2,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "all"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg",
        {
          "exclude": [
            "**/__test__/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node",
        {
          "exclude": [
            "**/__test__/*"
          ]
        }
      ]
    ]
  }
}
