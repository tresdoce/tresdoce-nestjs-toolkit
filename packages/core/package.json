{
  "name": "@tresdoce-nestjs-toolkit/core",
  "version": "0.5.0-beta.4",
  "description": "Tresdoce NestJS Toolkit - Funcionalidades a nivel core",
  "author": {
    "name": "Maximiliano \"Mex\" Delgado",
    "email": "mdelgado@tresdoce.com.ar",
    "url": "https://rudemex.github.io/"
  },
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "keywords": [
    "nestjs",
    "core"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tresdoce/tresdoce-nestjs-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/tresdoce/tresdoce-nestjs-toolkit/issues"
  },
  "homepage": "https://github.com/tresdoce/tresdoce-nestjs-toolkit#readme",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf ../../dist/core",
    "build": "pika build --out ../../dist/core",
    "test": "jest --runInBand --coverage --forceExit",
    "clean": "rimraf .turbo coverage test-results node_modules test-report.xml"
  },
  "publishConfig": {
    "access": "public",
    "directory": "../../dist/core"
  },
  "peerDependencies": {
    "@nestjs/common": "^9.4.1",
    "@nestjs/core": "^9.4.1",
    "@nestjs/platform-express": "^9.4.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.5"
  },
  "devDependencies": {
    "@tresdoce-nestjs-toolkit/config": "^0.3.0-beta.4",
    "@types/tresdoce-nestjs-toolkit": "^0.2.0-beta.4"
  },
  "prettier": {
    "semi": true,
    "tabWidth": 2,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "all"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "**/__test__/*",
            "**/__test__/**/*.crt",
            "**/__test__/**/*.key"
          ]
        }
      ],
      [
        "@pika/plugin-build-node",
        {
          "exclude": [
            "**/__test__/*",
            "**/__test__/**/*.crt",
            "**/__test__/**/*.key"
          ]
        }
      ],
      [
        "@pika/plugin-build-types",
        {
          "exclude": [
            "**/__test__/*",
            "**/__test__/**/*.crt",
            "**/__test__/**/*.key"
          ]
        }
      ]
    ]
  }
}
