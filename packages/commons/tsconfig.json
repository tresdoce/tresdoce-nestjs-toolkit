{
  "extends": "@tresdoce-nestjs-toolkit/config",
  "compilerOptions": {
    "rootDir": "./src",
    "types": ["tresdoce-nestjs-toolkit", "node"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "__test__",
    "**/__test__/**/*",
    "**/*spec.ts",
    "**/*it.ts",
    "**/*test.ts",
    "**/*e2e.ts",
    "**/*e2e-spec.ts",
    "coverage"
  ]
}
